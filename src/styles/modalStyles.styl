#modal-framework-default.modal-screen-cover
    visibility visible
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    text-align center
    z-index 1000
    transition all .25s

#modal-framework-default .modal-container
    overflow visible
    width 60%
    margin 100px auto
    text-align center
    display flex
    flex-direction column
    transition .5s ease-in-out
    border-radius 5px
    padding 0px
    background white

#modal-framework-default .modal-content
    display flex
    padding 20px
    border-radius 0px
    min-height 150px
    flex-direction column
    align-items stretch
    justify-content stretch
    font-size 1.25em
    overflow visible
    box-shadow none !important
    white-space pre-wrap

#modal-framework-default .list-group
    margin-bottom 0px

#modal-framework-default .list-group-item
    padding-top 0px
    padding-bottom 0px

#modal-framework-default .corner-icons
    display flex
    align-items center

#modal-framework-default .btn-group
    padding-top 10px
    display flex
    justify-content center
    padding 10px

#modal-framework-default .header
    display flex
    justify-content space-between
