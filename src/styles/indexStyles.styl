@import './modalStyles.styl'

#modal-framework 
    position absolute
    
#modal-framework-default .modal-screen-cover
    visibility visible
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    text-align center
    transition all .25s

#modal-framework-default .modal-container
    overflow visible
    width 60%
    margin 100px auto
    text-align center
    display flex
    flex-direction column
    transition .5s ease-in-out
    border-radius 5px
    padding 0px
    background white
    border 2px solid black
    left 0%
    right 0%
    position absolute
    top 0px